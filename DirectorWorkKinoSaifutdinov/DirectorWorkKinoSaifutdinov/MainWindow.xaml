<Window x:Class="DirectorWorkKinoSaifutdinov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectorWorkKinoSaifutdinov"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="159*"/>
        </Grid.RowDefinitions>

        <StackPanel RenderTransformOrigin="0.439,0.631" Grid.RowSpan="2">
            <TextBlock Text="login" FontSize="20" Margin="10,0,0,0"/>
            <TextBox x:Name="TBLogin" Margin="15"/>
            <TextBlock Text="Password" FontSize="20"/>
            <TextBox x:Name="TBPassword" Margin="15"/>
            <Button x:Name="BEntrance" Content="Entrance"/>
            <Button x:Name="BExit" Content="Exit" />


        </StackPanel>
    </Grid>
</Window>
